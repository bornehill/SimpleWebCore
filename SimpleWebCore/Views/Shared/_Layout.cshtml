<!DOCTYPE html>
<html>
<head>
    <title>Simple Web site: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <header class="container">
            <div class="navbar-header">
                <div class="navbar-brand">Welcome to simple web site</div>
                <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776</button>
            </div>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @*<a href="/">Home</a>*@
                        <a asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li>
                        @*<a href="/app/contact">Contact</a>*@
                        <a asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li>
                        @*<a href="/app/about">About us</a>*@
                        <a asp-controller="App" asp-action="About">About us</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>
                        @*<a href="/app/about">About us</a>*@
                        <a asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                    }
                    else { 
                    <li>
                        @*<a href="/app/about">About us</a>*@
                        <a asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    }
                </ul>
            </div>
        </header>
    </div>
    <section class="container">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </section>
    <footer class="container text-center">
        <div>Copyright 2018 Simple web site</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>